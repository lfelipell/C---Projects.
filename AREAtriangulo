/* Descripcion : Calcular el area de un triangulo
/* Entrada     : base y altura
/* Salida      : area
/**************************************************************************/

#include "stdafx.h"
#include "stdio.h"
#include "conio.h"

void main()
{float base,altura,area;
 printf("\t Calculo del area del traingulo \n");
 printf("\t ============================== \n\n\n");
 printf("Ingrese la base: ");
 scanf("%f",&base);
 printf("Ingrese la altura: ");
 scanf("%f",&altura);
 if ((base>0)&& (altura>0))
 {
   // Calcula el area
   area = (base*altura)/2;
   printf("\n El area es %f",area);
 }
 else
    printf("\n\n ----No se permiten numeros menores a 0----");
 
getch();
}
