#include "stdafx.h"
#include "conio.h"
#include "stdio.h"
#include "stdlib.h"

void main()
{int n,fac,i;
 printf("CALCULO DEL FACTORIAL DE UN NUMERO");
 printf("\n =================================");
 printf("INGRESE NUMERO: ");
 scanf("%d",&n);
 fac=1;
 if (n>0)
  for (i=1;i<=n;i++)
   fac=fac*i;
 else
   printf("\n ERROOOOOOOORRR");
  printf("\n el factorial es: %d",fac);

getch();
}
