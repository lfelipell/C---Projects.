#include "stdafx.h"
#include "stdio.h"
#include "conio.h"
#include "stdlib.h"

void main()
{int n,i,primo;
 printf("                  NUMERO PRIMO");
 printf("\n                  ============");
 printf("\n\n INGRESE NUMERO: ");
 scanf("%d",&n);
 primo=0;
 for(i=2;i<n;i++)
 {if(n%i==0)
   primo=1;
 }
 if (primo==0)
   printf("\n El numero %d ES PRIMO",n);
 else
   printf("\n El numero %d NO ES PRIMO",n);
getch();
}
