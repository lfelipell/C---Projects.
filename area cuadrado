/* Descripcion : Calcular el area de un cuadrado
/* Entrada : lado
/* Salida : area
/**************************************************************************/

#include "stdafx.h"
#include "stdio.h"
#include "conio.h"

void main()
{float lado,area;
 printf("\t Calculo del area del cuadrado \n");
 printf("\t ============================= \n\n\n");
 printf("Ingrese el lado: ");
 scanf("%f",&lado);
 if (lado>0)
 {
   // Calcula el area
   area = lado*lado;
   printf("\n El area es %f",area);
 }
 else
    printf("\n\n ----No se permiten numeros menores a 0----");
 
getch();
}
